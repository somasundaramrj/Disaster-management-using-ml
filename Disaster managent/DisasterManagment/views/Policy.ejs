    <script>
        // Tab functionality
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const tabId = btn.getAttribute('data-tab');
                
                tabBtns.forEach(btn => btn.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));
                
                btn.classList.add('active');
                document.getElementById(tabId).classList.add('active');
            });
        });
        
        // Quiz functionality
        const questions = document.querySelectorAll('.quiz-question');
        const nextBtn = document.getElementById('next-btn');
        const prevBtn = document.getElementById('prev-btn');
        let currentQuestion = 0;
        let score = 0;
        
        function showQuestion(questionIndex) {
            questions.forEach((question, index) => {
                if (index === questionIndex) {
                    question.style.display = 'block';
                } else {
                    question.style.display = 'none';
                }
            });
            
            // Update button states
            prevBtn.disabled = questionIndex === 0;
            if (questionIndex === questions.length - 2) {
                nextBtn.textContent = 'Show Results';
            } else if (questionIndex === questions.length - 1) {
                nextBtn.textContent = 'Restart Quiz';
            } else {
                nextBtn.textContent = 'Next';
            }
        }
        
        // Set up option selection
        questions.forEach(question => {
            const options = question.querySelectorAll('.quiz-option');
            options.forEach(option => {
                option.addEventListener('click', () => {
                    // Remove selected class from all options in this question
                    options.forEach(opt => opt.classList.remove('selected'));
                    // Add selected class to clicked option
                    option.classList.add('selected');
                });
            });
        });
        
        nextBtn.addEventListener('click', () => {
            if (currentQuestion < questions.length - 2) {
                // Handle answer for current question
                const currentQuestionEl = questions[currentQuestion];
                const selectedOption = currentQuestionEl.querySelector('.quiz-option.selected');
                const resultMessage = currentQuestionEl.querySelector('.result-message');
                
                if (selectedOption) {
                    const isCorrect = selectedOption.getAttribute('data-correct') === 'true';
                    
                    resultMessage.style.display = 'block';
                    if (isCorrect) {
                        resultMessage.textContent = 'Correct! Well done.';
                        resultMessage.className = 'result-message success';
                        score++;
                    } else {
                        const correctOption = currentQuestionEl.querySelector('.quiz-option[data-correct="true"]');
                        resultMessage.textContent = `Incorrect. The correct answer is: "${correctOption.textContent}".`;
                        resultMessage.className = 'result-message error';
                    }
                    
                    // Move to next question
                    currentQuestion++;
                    showQuestion(currentQuestion);
                } else {
                    alert('Please select an answer before proceeding.');
                }
            } else if (currentQuestion === questions.length - 2) {
                // Process the last question
                const currentQuestionEl = questions[currentQuestion];
                const selectedOption = currentQuestionEl.querySelector('.quiz-option.selected');
                
                if (selectedOption) {
                    const isCorrect = selectedOption.getAttribute('data-correct') === 'true';
                    if (isCorrect) score++;
                    
                    // Show results
                    currentQuestion++;
                    const scorePercentage = Math.round((score / (questions.length - 1)) * 100);
                    document.getElementById('quiz-score').textContent = `You scored ${score} out of ${questions.length - 1} (${scorePercentage}%).`;
                    
                    if (scorePercentage >= 80) {
                        document.getElementById('quiz-feedback').textContent = 'Excellent! You are well-prepared for disaster situations.';
                    } else if (scorePercentage >= 60) {
                        document.getElementById('quiz-feedback').textContent = 'Good job! Review the sections you missed to be better prepared.';
                    } else {
                        document.getElementById('quiz-feedback').textContent = 'Please review the disaster safety information and try again to improve your preparedness.';
                    }
                    
                    showQuestion(currentQuestion);
                } else {
                    alert('Please select an answer before proceeding.');
                }
            } else {
                // Restart quiz
                currentQuestion = 0;
                score = 0;
                questions.forEach(question => {
                    const options = question.querySelectorAll('.quiz-option');
                    options.forEach(option => option.classList.remove('selected'));
                    question.querySelector('.result-message').style.display = 'none';
                });
                showQuestion(currentQuestion);
            }
        });
        
        prevBtn.addEventListener('click', () => {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion(currentQuestion);
            }
        });
        
        // Emergency checklist functionality
        const checkProgressBtn = document.getElementById('check-progress');
        const checklistResult = document.getElementById('checklist-result');
        
        checkProgressBtn.addEventListener('click', () => {
            const checkboxes = document.querySelectorAll('#emergency-checklist input[type="checkbox"]');
            const checkedCount = document.querySelectorAll('#emergency-checklist input[type="checkbox"]:checked').length;
            const totalCount = checkboxes.length;
            const percentage = Math.round((checkedCount / totalCount) * 100);
            
            checklistResult.style.display = 'block';
            
            if (percentage >= 80) {
                checklistResult.className = 'result-message success';
                checklistResult.textContent = `Great job! You are ${percentage}% prepared for emergencies. Keep up the good work!`;
            } else if (percentage >= 50) {
                checklistResult.className = 'result-message success';
                checklistResult.textContent = `You are ${percentage}% prepared. Continue gathering the remaining items to improve your preparedness.`;
            } else {
                checklistResult.className = 'result-message error';
                checklistResult.textContent = `You are only ${percentage}% prepared. Please prioritize collecting more emergency supplies for your safety.`;
            }
        });
        
        // Initialize the quiz
        showQuestion(currentQuestion);
    </script>
