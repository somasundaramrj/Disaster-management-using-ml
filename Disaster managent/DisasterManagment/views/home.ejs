        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
const navLinks = document.querySelector('.nav-links');

mobileMenuBtn.addEventListener('click', () => {
    navLinks.classList.toggle('active');
    document.body.style.overflow = navLinks.classList.contains('active') ? 'hidden' : '';
});

// Close mobile menu when clicking outside
document.addEventListener('click', (e) => {
    if (!e.target.closest('.navbar') && navLinks.classList.contains('active')) {
        navLinks.classList.remove('active');
        document.body.style.overflow = '';
    }
});

// Government Announcement
function closeAnnouncement() {
    const announcement = document.getElementById('govAnnouncement');
    announcement.style.height = announcement.offsetHeight + 'px';
    announcement.style.opacity = '0';
    setTimeout(() => {
        announcement.style.height = '0';
        announcement.style.padding = '0';
        announcement.style.margin = '0';
        setTimeout(() => {
            announcement.style.display = 'none';
            // Adjust navbar and hero section position
            document.querySelector('.navbar').style.top = '0';
            document.querySelector('.hero').style.marginTop = '60px';
            // Adjust mobile menu
            if (window.innerWidth <= 768) {
                document.querySelector('.nav-links').style.top = '60px';
            }
        }, 300);
    }, 10);
}

// Smooth scroll for navigation links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
            // Close mobile menu if open
            navLinks.classList.remove('active');
            document.body.style.overflow = '';
        }
    });
});

// Navbar scroll effect
let lastScroll = 0;
const navbar = document.querySelector('.navbar');

window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > lastScroll && currentScroll > 100) {
        navbar.style.transform = 'translateY(-100%)';
    } else {
        navbar.style.transform = 'translateY(0)';
    }
    
    if (currentScroll > 100) {
        navbar.style.background = 'rgba(255, 0, 0, 0.95)';
        navbar.style.boxShadow = '0 2px 10px rgba(0, 0, 0, 0.3)';
    } else {
        navbar.style.background = 'rgba(255, 0, 0, 0.9)';
        navbar.style.boxShadow = 'none';
    }
    
    lastScroll = currentScroll;
});

