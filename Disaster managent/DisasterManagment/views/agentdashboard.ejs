                    <div class="status-icon flood-icon">
                        <i class="fas fa-water"></i>
                    </div>
                    <div class="status-info">
                        <h3>Flood Risk</h3>
                        <div class="status-indicator status-normal" id="floodStatus">Normal</div>
                    </div>
                </div>
            </div>

